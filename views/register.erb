<% @header = "Create a temporary Canvas account" %>

<form method='POST' action='<%= "#{merge_point}/register" %>'>
  <div class='form-group row'>
      <label for='full_name' class='col-xs-4 col-form-label' />Full name:</label>
     <div class="col-xs-8">
      <input id='full_name' class='form-control' type='text' name='full_name' />
    </div>
  </div>

  <div class='form-group row'>
      <label for='email' class='col-xs-4 col-form-label' />Email:</label>
     <div class="col-xs-8">
      <input id='email' class='form-control' type='text' name='email' />
     </div>
  </div>

  <div class='form-group row'>
      <label for='expire_in' class='col-xs-4 col-form-label'>Expires in (days):</label>
     <div class="col-xs-8">
      <input id='expire_in' class='form-control' type='text' name='expire_in' value=30 />
     </div>
  </div>

  <input id='submit' type='submit' class="btn btn-cu"/>
</form>
